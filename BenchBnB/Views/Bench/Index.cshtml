@model BenchBnB.Models.ViewModels.AllLists

@{
    ViewBag.Title = "Bench List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="float-right">
    <div>
    @Html.Label("Minimum Seats")
    @Html.TextBox("minSeats", "")
    </div>
    <div>
    @Html.Label("Maximum Seats")
    @Html.TextBox("maxSeats", "")
    </div>
</div>

<div style="height: 470px">
    <div id="map" class="map float-left"></div>



    <div class="scrollable-table float-right" style="width: 60%">
        <table id="table" class="table table-hover table-scroll">
            <thead class="thead-dark">
                <tr>
                    <th>Bench</th>
                    <th>Description</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bench in Model.Benches)
            {
                    <tr data="~/Bench/View/@bench.Id">
                        <td>@bench.Name</td>
                        <td>@bench.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/map.js"></script>
<script src="~/Scripts/benchList.js"></script>
<br />
<p>@Html.ActionLink("Add A Bench!", "Add", null, new { @class = "btn btn-success" })</p>
