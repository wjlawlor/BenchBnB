@model BenchBnB.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "LoginForm" }))
{
    @Html.ValidationSummary()
    
    <div class="form-group row">
        <div class="col-xs-3 ml-3">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-3 ml-3">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>

    <div>
        <button id="loginButton" type="submit" class="btn btn-success btn-lg" disabled>Login</button>
        @Html.ActionLink("Cancel", "Index", "Bench", null, new { @class = "btn btn-secondary btn-lg" })
    </div>
}
<br />
<p>@Html.ActionLink("Don't have an account? Click here to register now!", "Register")</p>

<script src="~/Scripts/loginButtonToggler.js"></script>